@{
    var message = TempData["ErrorMessage"];
    var isError = message is not null;
    var typeClass = "";

    if (isError)
    {
        var type = (ErrorType)TempData["ErrorType"];

        typeClass = type switch
        {
            ErrorType.Warning => "alert-warning",
            ErrorType.Error => "alert-danger",
            ErrorType.None => "alert-light",
            _ => "alert-light"
        };
    }
}

@if (isError)
{
    <div class="alert @typeClass alert-dismissible fade show mb-2" role="alert">
      @message
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
}
